{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"layout": {
			"contentSize": "40rem",
			"wideSize": "60rem"
		},
		"color": {
			"palette": [
				{
					"slug": "red",
					"name": "Red",
					"color": "#F45657"
				},
				{
					"slug": "orange",
					"name": "Orange",
					"color": "#FF965D"
				},
				{ "slug": "yellow", "name": "Yellow", "color": "#FFC233" },
				{ "slug": "green", "name": "Green", "color": "#51D8B0" },
				{ "slug": "blue", "name": "Blue", "color": "#2874FF" },
				{ "slug": "purple", "name": "Purple", "color": "#843FFF" }
			]
		}
	},
	"styles": {
		"color": {
			"background": "white",
			"text": "black"
		},

		"typography": {
			"fontFamily": "proxima-nova, sans-serif",
			"fontSize": "large"
		},
		"blocks": {
			"core/paragraph": {
				"spacing": {
					"margin": { "bottom": "1em" }
				}
			},
			"core/heading": {
				"typography": {
					"lineHeight": "1"
				},
				"spacing": { "margin": { "top": "0", "bottom": "1em" } }
			}
		},

		"spacing": {
			"blockGap": "1rem",
			"margin": {
				"top": "1rem",
				"right": "auto",
				"bottom": "1rem",
				"left": "auto"
			},
			"padding": {
				"top": "1rem",
				"right": "1rem",
				"bottom": "1rem",
				"left": "1rem"
			}
		}
	}
}
